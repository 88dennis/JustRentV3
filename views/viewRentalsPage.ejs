    <div class="container">
        <header class=jumbotron>
            <div class="container">
                <h1>JUST RENT...</h1>
                <p>pick your items now!</p>
                <a class="btn btn-primary" href="/ ">Home</a>
                <a class="btn btn-primary" href="/forRentItems/new">Add Items</a>
            </div>
        </header>

        <div class="row">
            <div class="col-lg-12">
                <h3>Our Popular Items
                </h3>
            </div>
        </div>
        <!-- display flex wrap determines the minimum space required to align each grid -->
        <div class="row" style="display:flex; flex-wrap: wrap;">
            <% for(let i = 0; i < rentalObjectsEjs.length; i++){ %>
                <div class="col-md-3 col-sm-6" style="margin-bottom: 5px;">
                    <div class="thumbnail">
                        <img src="<%= rentalObjectsEjs[i]['imgSource'] %>" height="100%" width="100%" alt="<%= rentalObjectsEjs[i][" imgSource "] %>">
                    </div>

                    <div class="caption">
                        <h4>
                            <%= rentalObjectsEjs[i]["name"] %>
                        </h4>
                    </div>
                    <div class="caption">
                        <h6>
                            <%= rentalObjectsEjs[i]["description"] %>
                        </h6>
                    </div>
                    <div class="caption">
                        <h6>
                            <%= rentalObjectsEjs[i]["price"] %>
                        </h6>
                    </div>
                    <a class="btn btn-sm btn-primary" href="/forRentItems/<%=rentalObjectsEjs[i]['_id']%>">More Info</a>
                </div>
                <% } %>
                    <!-- below is the closing div for row -->
        </div>
        <!-- below is the closing div for container -->
    </div>

