<%- include("partials/top") %>
    <div class="container">
        <div class="row">
            <div style="min-width:30%; margin: 25px auto;">
                <h1 style="text-align: center;">Add New Item</h1>
                <form action="/forRentItems" method="POST">
                    <!-- the form-group gives you proper spacing -->
                    <div class="form-group"> <input class="form-control" type="text" name="name" placeholder="add item for rent"></div>
                    <div class="form-group"> <input class="form-control" type="text" name="description" placeholder="add a description"></div>
                    <div class="form-group"> <input class="form-control" type="number" name="price" placeholder="add a price"></div>
                    <div class="form-group"> <input class="form-control" type="text" name="imgSource" placeholder="add the URL of your image"></div>
                    <!-- the btn-block will have the button take all the space -->
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </form>
                <a href="/">Home</a>
                <a href="/forRentItems">Featured Items</a>
            </div>


        </div>

    </div>

    <%- include("partials/bottom") %>